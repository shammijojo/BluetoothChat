<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/chatboxLayout"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <View
        android:id="@+id/spaceView"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/chatbox"
        android:text="how is it"
        android:textSize="20dp"
        android:layout_width="0dp"
        app:layout_constraintWidth_max="wrap"
        app:layout_constraintWidth_percent="0.7"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/spaceView"
        android:background="@drawable/received_msg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:inputType="textMultiLine"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/time"
        android:layout_width="wrap_content"
        android:layout_height="10dp"
        android:textSize="8dp"
        android:text="Current Time"
        app:layout_constraintTop_toBottomOf="@+id/chatbox"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        tools:ignore="MissingConstraints" />

    <View
        android:id="@+id/horizontalLine"
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/time"
        android:background="#050005"/>

</androidx.constraintlayout.widget.ConstraintLayout>